<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.company.crm.mapper.RoleMapper">
	<resultMap id="BaseResultMap" type="Role">
		<id column="id" property="id" />
		<result column="sn" property="sn" />
		<result column="name" property="name" />
	</resultMap>
	<delete id="deleteByPrimaryKey" parameterType="Long">
		delete from role
		where id = #{id}
	</delete>
	<insert id="insert" parameterType="Role" useGeneratedKeys="true"
		keyProperty="id">
		insert into role (sn,name)
		values (#{sn},#{name})
	</insert>
	<update id="updateByPrimaryKey" parameterType="Role">
		update role
		set sn = #{sn},name = #{name}
		where id = #{id}
	</update>
	<select id="selectByPrimaryKey" resultMap="BaseResultMap"
		parameterType="Long">
		select id, sn, name
		from role
		where id = #{id}
	</select>
	<select id="selectAll" resultMap="BaseResultMap">
		select id, sn, name
		from role
	</select>
	
	<select id="queryPageResultCount" parameterType="EmployeeQueryObject" resultType="Long">
		select count(id)
		from role
		<!-- <include refid="where_sql"/> -->
	</select>
	
	<select id="queryPageResult" parameterType="EmployeeQueryObject" resultMap="BaseResultMap">
		select *
		from role 
		<!-- <include refid="where_sql"/> -->
		limit #{start},#{rows}
	</select>

	<insert id="insertRelation" parameterType="Long">
		insert into role_permission (r_id,p_id) values (#{rId},#{pId})
	</insert>
	
	<insert id="batchInsertRelation" parameterType="BatchInsertIds">
		 insert into role_permission (r_id,p_id) values 
		 <!-- 这里的list传入的List<BatchInsertIds> -->
		 <foreach collection="list" item="item" separator=",">
		 	(#{item.id_1},#{item.id_2})
		 </foreach>
	</insert>
	
	<delete id="deleteRelation" parameterType="Long">
		delete from role_permission 
		where r_id = #{id}
	</delete>
</mapper>