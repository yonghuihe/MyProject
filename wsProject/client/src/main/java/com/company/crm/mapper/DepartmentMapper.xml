<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.crm.mapper.DepartmentMapper">
  <resultMap id="BaseResultMap" type="com.company.crm.domain.Department">
    <id column="id"  property="id" />
    <result column="sn"  property="sn" />
    <result column="name"  property="name" />
    <result column="manager_id"  property="managerId" />
    <result column="parent_id"  property="parentId" />
    <result column="state"  property="state" />
  </resultMap>
  
  <resultMap id="simpleResultMap" type="Department">
    <id column="id"  property="id" />
    <result column="name"  property="name" />
    </resultMap>
  
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
    delete from department
    where id = #{id}
  </delete>
  <insert id="insert" keyProperty="id" parameterType="Department" useGeneratedKeys="true">
    insert into department (sn, name, manager_id, 
      parent_id, state)
    values (#{sn}, #{name}, #{managerId}, 
      #{parentId}, #{state})
  </insert>
  <update id="updateByPrimaryKey" parameterType="Department">
    update department
    set sn = #{sn},
      name = #{name},
      manager_id = #{managerId},
      parent_id = #{parentId},
      state = #{state}
    where id = #{id}
  </update>
  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select id, sn, name, manager_id, parent_id, state
    from department
    where id = #{id}
  </select>
  <select id="selectAll" resultMap="BaseResultMap">
    select id, sn, name, manager_id, parent_id, state
    from department
  </select>
  
  <select id="getSimpleDept" resultMap="simpleResultMap">
  	 select id, name from department
  </select>
  
</mapper>