<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com._520it.es.mapper.DeptMapper" >
  <resultMap id="BaseResultMap" type="com._520it.es.domain.Dept" >
    <id column="id" property="id"  />
	<result column="deptName" property="deptName"  />
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="long" >
    delete from dept where id = #{id}
  </delete>
  <insert id="insert" parameterType="com._520it.es.domain.Dept" useGeneratedKeys="true" keyProperty="id" >
    insert into dept 
    (deptName)
    values 
    (#{deptName})
  </insert>
  <update id="updateByPrimaryKey" parameterType="com._520it.es.domain.Dept" >
    update dept
    set
	    deptName=#{deptName}
    where id = #{id}
  </update>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="long" >
    select * from dept where id = #{id}
  </select>
  <select id="selectAll" resultMap="BaseResultMap" >
    select * from dept
  </select>
  <sql id="conditionSql">
  	<where>
  	</where>
  </sql>
  <select id="queryByCondictionCount" resultType="long">
  	select count(*) from dept
  	<include refid="conditionSql"/>
  </select>
  <select id="queryByConditionResult" resultMap="BaseResultMap">
  	select * from dept
  	<include refid="conditionSql"/>
  	limit #{start},#{rows}
  </select>
</mapper>